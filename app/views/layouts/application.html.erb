<!DOCTYPE html>
<html>
  <head>
    <title>PluginPoc</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag src="https://d1f8f9xcsvx3ha.cloudfront.net/sbl/0.8.0/fastspring-builder.min.js", id: "fsc-api", type: "text/javascript", data: { storefront: "machinefarm.test.onfastspring.com/popup-plugin", 'popup-webhook-received' => "popupWebhookReceived", "popup-closed" => "popupClose" } %>
  </head>

  <body>
    <% if current_user %>
      <%= link_to 'Log Out', logout_path, method: :delete %>
    <% else %>
      <%= render "sessions/form" %>
    <% end %>
    <br><br>
    <%= yield %>
  </body>
</html>
